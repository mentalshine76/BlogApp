
<div class="container">

<div class="row">





<% @Blogs.each do |b| %>
<div class="col-md-4" id= 'card_margin'>
<div class="card" style="width: 20rem">
  <div class="card-body">
    <h5 class="card-title">
      <%= b.title %>
    </h5>
    <p class="card-text">
      <%= b.content %>
    </p>
    <%= link_to 'Ver', blog_path(b), class: 'btn btn-outline-primary' %>
    <%= link_to 'Editar', edit_blog_path(b), class: 'btn btn-outline-primary' %>
    <%= link_to 'Borrar', blog_path(b), class: 'btn btn-outline-danger', method: :delete, data: { confirm: '¿Está segudo que desea borrar este post?'} %>
  </div>

</div>



</div>
<% end %>



</div>
</div>
